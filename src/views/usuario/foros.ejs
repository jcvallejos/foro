<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../plantilla/cabeza') %>
<style>
    .foto {
        width: 2cm;
        height: 2cm;
        border-radius: 1cm;
    }
    .apodo {
        background-color: azure;
        display: block;
        text-align: center;
    }
</style>
</head>
<body>
<div class="container">
<div class="container-fluid">
    <%- include('../plantilla/titulo') %>
    <%- include('../plantilla/menu_usuario') %>
    <h1>Foros</h1>
    <hr>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Nro.</th>
                <th>Autor</th>
                <th>Tema</th>
                <th>Vistas</th>
                <th>Comentarios</th>
                <th>Fecha</th>
                <th>Opciones</th>
            </tr>
        </thead>
    <% i=1;temas.forEach(tema => {%>
        <tr>
            <td><%= i++ %></td>
            
            <td><img class="foto" src="/fotos/<%= tema.foto %>">
                <span class="apodo"><%= tema.apodo %></span></td>
            <td><%= tema.tema %></td>
            <td><%= tema.vistas %></td>
            <td><%= tema.comentarios %></td>
            <td><%= moment(tema.fecha).fromNow() %></td>
            <td><a href="/usuario/comentarios/<%= tema.id_tema %>" class="btn btn-info">Comentar</a>
            </td>
        </tr>
    <% }); %>
   
    </table>

    <%- include('../plantilla/pie') %>
</div>
</div>
</body>
</html>